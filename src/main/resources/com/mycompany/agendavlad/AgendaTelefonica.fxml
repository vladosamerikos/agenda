<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="466.0" prefWidth="422.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.agendavlad.AgendaController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

       <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 8 20 8 20;" styleClass="20" text="Agenda Telefónica" />

    <HBox alignment="CENTER" spacing="5" style="-fx-padding: 15 0 15 0;">
        <TextField fx:id="buscarTextField" promptText="Buscar por nombre" />
        <Button onAction="#mostrarFormularioAgregar" text="Agregar" />
    </HBox>

    <TableView fx:id="tablaContactos" editable="true" prefHeight="327.0" prefWidth="399.0">
        <columns>
            <TableColumn fx:id="nombreColumn" prefWidth="100" text="Nombre">
                <cellValueFactory>
                    <javafx.scene.control.cell.PropertyValueFactory property="nombre" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="apellidosColumn" prefWidth="100" text="Apellidos">
                <cellValueFactory>
                    <javafx.scene.control.cell.PropertyValueFactory property="apellidos" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="telefonoColumn" prefWidth="100" text="Teléfono">
                <cellValueFactory>
                    <javafx.scene.control.cell.PropertyValueFactory property="telefono" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="direccionColumn" prefWidth="100" text="Dirección">
                <cellValueFactory>
                    <javafx.scene.control.cell.PropertyValueFactory property="direccion" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
