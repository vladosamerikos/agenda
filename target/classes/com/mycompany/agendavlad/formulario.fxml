<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.agendavlad.FormularioController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <Label text="Agregar Nuevo Contacto" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="5" alignment="CENTER">
        <Label text="Nombre:" />
        <TextField fx:id="nombreTextField" promptText="Nombre" />
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Label text="Apellidos:" />
        <TextField fx:id="apellidosTextField" promptText="Apellidos" />
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Label text="Teléfono:" />
        <TextField fx:id="telefonoTextField" promptText="Teléfono" />
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Label text="Dirección:" />
        <TextField fx:id="direccionTextField" promptText="Dirección" />
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Button text="Guardar" onAction="#crearContacto" />
        <Button text="Cancelar" onAction="#cancelar" />
    </HBox>
</VBox>
